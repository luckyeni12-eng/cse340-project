{{! views/inventory/add-classification.handlebars }}
{{> header}}
<main>
  <h1>Add Classification</h1>

  {{#if message}}
    <div class="message success">{{message}}</div>
  {{/if}}

  {{#if errors}}
    <div class="message error">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <form method="post" action="/inv/add-classification" novalidate>
    <label for="classificationName">Classification name</label>
    <input
      id="classificationName"
      name="classification_name"
      type="text"
      pattern="^[A-Za-z0-9]+$"
      title="Use only letters and numbers. No spaces or special characters."
      required
    >
    <small>Only letters and numbers. No spaces or special characters.</small>

    <button type="submit">Add Classification</button>
  </form>

  <p><a href="/inv">Back to management</a></p>
</main>
{{> footer}}