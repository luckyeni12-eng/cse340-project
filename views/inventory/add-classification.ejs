<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
</head>
<body>
  <h1>Add Classification</h1>

  <% if (errors && errors.length > 0) { %>
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (message.length > 0) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <form action="/inv/add-classification" method="POST">
    <label for="classification_name">Classification Name (no spaces or special chars)</label>
    <input type="text" name="classification_name" id="classification_name" pattern="[A-Za-z0-9]+" required>
    <button type="submit">Add Classification</button>
  </form>
</body>
</html>