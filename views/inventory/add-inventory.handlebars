{{! views/inventory/add-inventory.handlebars }}
{{> header}}
<main>
  <h1>Add Vehicle</h1>

  {{#if message}}
    <div class="message success">{{message}}</div>
  {{/if}}

  {{#if errors}}
    <div class="message error">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <form method="post" action="/inv/add-inventory" novalidate>
    <label for="classificationList">Classification</label>
    {{{classificationList}}} <!-- utilities returns <select> HTML -->

    <label for="invMake">Make</label>
    <input id="invMake" name="inv_make" type="text" required value="{{#if sticky}}{{sticky.inv_make}}{{/if}}">

    <label for="invModel">Model</label>
    <input id="invModel" name="inv_model" type="text" required value="{{#if sticky}}{{sticky.inv_model}}{{/if}}">

    <label for="invYear">Year</label>
    <input id="invYear" name="inv_year" type="number" min="1900" max="2100" required value="{{#if sticky}}{{sticky.inv_year}}{{/if}}">

    <label for="invDescription">Description</label>
    <textarea id="invDescription" name="inv_description" required>{{#if sticky}}{{sticky.inv_description}}{{/if}}</textarea>

    <label for="invImage">Image path</label>
    <input id="invImage" name="inv_image" type="text" required value="{{#if sticky}}{{sticky.inv_image}}{{else}}/images/no-image-available.png{{/if}}">

    <label for="invThumbnail">Thumbnail path</label>
    <input id="invThumbnail" name="inv_thumbnail" type="text" required value="{{#if sticky}}{{sticky.inv_thumbnail}}{{else}}/images/no-image-available-tn.png{{/if}}">

    <label for="invPrice">Price</label>
    <input id="invPrice" name="inv_price" type="number" step="0.01" min="0" required value="{{#if sticky}}{{sticky.inv_price}}{{/if}}">

    <label for="invMiles">Miles</label>
    <input id="invMiles" name="inv_miles" type="number" min="0" value="{{#if sticky}}{{sticky.inv_miles}}{{/if}}">

    <button type="submit">Add Vehicle</button>
  </form>

  <p><a href="/inv">Back to management</a></p>
</main>
{{> footer}}