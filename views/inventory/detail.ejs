<!-- views/inventory/detail.ejs -->
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %> | CSE Motors</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link rel="stylesheet" href="/css/detail.css" />
</head>
<body>
  <header class="site-header">
    <nav class="main-nav">
      <a href="/">Home</a> |
      <a href="/inventory/classification/1">Classifications</a>
    </nav>
  </header>

  <main class="container">
    <!-- Top: vehicle make & model in main heading (requirement) -->
    <h1 class="page-heading"><%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>

    <section class="detail-layout">
      <div class="detail-image">
        <!-- Use full-size image not thumbnail -->
        <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>" />
      </div>

      <div class="detail-content">
        <h2 class="headline"><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>

        <p class="price"><%= require('../utilities').formatCurrencyUSD(vehicle.inv_price) %></p>

        <p class="mileage"><strong>Mileage:</strong> <%= require('../utilities').formatNumberWithCommas(vehicle.inv_miles) %> miles</p>

        <div class="description">
          <h3>Vehicle Details</h3>
          <p><%= vehicle.inv_description %></p>
        </div>

        <dl class="specs">
          <dt>Make</dt><dd><%= vehicle.inv_make %></dd>
          <dt>Model</dt><dd><%= vehicle.inv_model %></dd>
          <dt>Year</dt><dd><%= vehicle.inv_year %></dd>
          <dt>Price</dt><dd><%= require('../utilities').formatCurrencyUSD(vehicle.inv_price) %></dd>
          <dt>Mileage</dt><dd><%= require('../utilities').formatNumberWithCommas(vehicle.inv_miles) %> miles</dd>
        </dl>
      </div>
    </section>

    <!-- Also render the HTML returned by utilities if you want to show that block (assignment asked for utility) -->
    <section class="utility-html">
      <h2>Details (utility rendered)</h2>
      <!-- vehicleHTML contains HTML string -> render unescaped -->
      <%- vehicleHTML %>
    </section>
  </main>

  <footer>
    <%- include('../partials/footer') %>
  </footer>
</body>
</html>
